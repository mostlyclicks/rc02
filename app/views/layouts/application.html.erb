<!-- Portfolio Section -->
<section id="brands" class="cbp-so-section cbp-so-init">
  <div class="container cbp-so-side cbp-so-side-top">
    <h1>RideCo Brands</h1>

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
        <ol class="carousel-indicators">
          <% @brands.each_with_index do |brand, index| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>"></li>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="min-height:750px;border:10px solid rgba(0,0,0,.1);">
          <% @brands.each_with_index do |brand, index| %>
            <div class="item <% if index == 0 %>active<% end %>" style="min-height:750px;background:url('<%= brand.main_image.url unless brand.main_image.nil? %>') 50% 300px no-repeat;">
              <%#= image_fu brand.logo_image, "120x120#c" %>

              <div class="row" style="padding:30px 0 30px 0;">
                <div class="col-md-3 col-md-offset-2">
                  <%= image_tag brand.logo_image.url, class: 'img-responsive' %>
                  <%#= image_tag brand.main_image.url %>
                </div>
                <div class="col-md-6" style="background-color:rgba(255,255,255,.7);">
                  <h1><%= brand.name %></h1>
                  <span class="text-left"><%= raw brand.intro %></span>
                </div>

              </div>
              
              <div class="carousel-caption">
                
              </div>
            </div>
          <% end %>
        </div>

        <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>

      </div>

   
  </div>
</section>
<!-- End of Portfolio Section -->


